sudo apt update

cd ~
wget https://github.com/xpack-dev-tools/riscv-none-elf-gcc-xpack/releases/download/v13.2.0-2/xpack-riscv-none-elf-gcc-13.2.0-2-linux-x64.tar.gz
ls

sudo mkdir -p /opt
sudo chown $USER:$USER /opt
cd /opt
tar -xzf ~/xpack-riscv-none-elf-gcc-13.2.0-2-linux-x64.tar.gz
ls /opt
ls /opt/xpack-riscv-none-elf-gcc-13.2.0-2/bin

export PATH=/opt/xpack-riscv-none-elf-gcc-13.2.0-2/bin:$PATH
riscv-none-elf-gcc --version

echo 'export PATH=/opt/xpack-riscv-none-elf-gcc-13.2.0-2/bin:$PATH' >> ~/.bashrc
source ~/.bashrc

echo 'int main(){while(1);}' > test.c
riscv-none-elf-gcc -march=rv32im -mabi=ilp32 test.c -o test.elf
make software TARGET=vajra PROGRAM=tglgpio MARCH=rv64imac_zicsr

cd /opt/xpack-riscv-none-elf-gcc-13.2.0-2/bin
ln -s riscv-none-elf-gcc       riscv64-unknown-elf-gcc
ln -s riscv-none-elf-g++       riscv64-unknown-elf-g++
ln -s riscv-none-elf-as        riscv64-unknown-elf-as
ln -s riscv-none-elf-ld        riscv64-unknown-elf-ld
ln -s riscv-none-elf-objcopy   riscv64-unknown-elf-objcopy
ln -s riscv-none-elf-objdump   riscv64-unknown-elf-objdump
ln -s riscv-none-elf-gdb       riscv64-unknown-elf-gdb
ln -s riscv-none-elf-ar        riscv64-unknown-elf-ar
ln -s riscv-none-elf-ranlib    riscv64-unknown-elf-ranlib
ln -s riscv-none-elf-strip     riscv64-unknown-elf-strip
riscv64-unknown-elf-gcc --version

cd ~/shakti/shakti-sdk
make software TARGET=vajra PROGRAM=tglgpio MARCH=rv64imac_zicsr
